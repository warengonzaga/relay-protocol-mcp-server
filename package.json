{
  "name": "relay-protocol-mcp",
  "version": "0.1.0",
  "description": "Model Context Protocol server for Relay Protocol REST API",
  "main": "dist/index.js",
  "type": "module",
  "bin": {
    "relay-protocol-mcp": "./dist/index.js"
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsx src/index.ts",
    "dev:sse": "tsx src/server.ts",
    "start": "node dist/index.js",
    "start:sse": "node dist/server.js",
    "test:watch": "vitest watch",
    "lint": "eslint src --ext .ts",
    "format": "prettier --write \"src/**/*.ts\"",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.25.1",
    "axios": "^1.13.2",
    "express": "^5.2.1",
    "zod": "^4.3.5"
  },
  "devDependencies": {
    "@types/express": "^5.0.6",
    "@types/node": "^25.0.3",
    "@typescript-eslint/eslint-plugin": "^8.52.0",
    "@typescript-eslint/parser": "^8.52.0",
    "eslint": "^9.39.2",
    "prettier": "^3.7.4",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3"
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "keywords": [
    "mcp",
    "relay",
    "protocol",
    "api",
    "modelcontextprotocol"
  ],
  "author": "Waren Gonzaga <opensource@warengonzaga.com>",
  "license": "MIT",
  "packageManager": "pnpm@10.18.2"
}
